{% extends '::base.html.twig' %}
{% block headline %}Main Page{% endblock headline %}

{% block content %}
    <div class="col-lg-9 clearfix">
        {% if app.user %}
            <div class="btn-group cl">
                <a href="{{ path('fos_user_security_logout') }}" class="btn-primary btn">Log Out</a>
                <a href="{{ path('fos_user_profile_edit') }}" class="btn-primary btn">Edit Profile</a>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ app.user.id }}</td>
                    <td>{{ app.user.firstName }}</td>
                    <td>{{ app.user.lastName }}</td>
                    <td>{{ app.user.email }}</td>
                </tr>
                </tbody>
            </table>
        {% else %}
            <div class="btn-group cl">
                <a href="{{ path('fos_user_security_login') }}" class="btn-primary btn">Log In</a>
                <a href="{{ path('fos_user_registration_register') }}" class="btn-primary btn">Register</a>
            </div>
        {% endif %}
    </div>
{% endblock content %}
