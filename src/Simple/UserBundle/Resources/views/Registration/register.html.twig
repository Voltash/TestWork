{% extends '::base.html.twig' %}

{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% block headline %}Register page{% endblock headline %}

{% block content %}
    <div class="col-lg-3">
        <h3>Register form</h3>
    </div>
    <div class="col-lg-9">
        <form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-default" value="Registration" />
            </div>
        </form>

    </div>
    <div class="col-lg-3 m">
        <h3>Register By facebook</h3>
    </div>
    <div class="col-lg-9">
        <p>
            <br>
            <a class="btn btn-primary" href="{{ path('hwi_oauth_service_redirect', {'service' : 'facebook'}) }}">Facebook</a>
        </p>
    </div>
{% endblock content %}

